{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <div class="container">
        <div class="py-5 text-center">
            <img class="d-block mx-auto mb-4" src="https://symfony.com/logos/symfony_black_03.png" alt="" width="72" height="72">
            <h2>Upload File</h2>
        </div>

        <div class="row">
            {% include 'composant/messageFlash.html.twig' %}

            <div class="col-md-8">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.name) }}
                        {{ form_errors(form.name) }}
                        {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Name'} }) }}
                    </div>
                    <div class="col-md-6 mb-3">
                        {{ form_label(form.author) }}
                        {{ form_errors(form.author) }}
                        {{ form_widget(form.author, {'attr': {'class': 'form-control', 'placeholder': 'Name'} }) }}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        {{ form_label(form.description) }}
                        {{ form_errors(form.description) }}
                        {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Name'} }) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        {{ form_label(form.pictureFile) }}
                        {{ form_errors(form.pictureFile) }}
                        {{ form_widget(form.pictureFile, {'attr': {'class': 'form-control', 'placeholder': 'Name'} }) }}
                    </div>
                </div>
                <hr>
                <button class="btn btn-primary btn-lg btn-block" type="submit">Save</button>
                {{ form_end(form) }}
            </div>
            <div class="col-md-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Movie</span>
                </h4>

                <ul class="list-group mb-3">
                    {% for movie in movies %}
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Name : {{ movie.name }} </h6>
                            <small class="text-muted">Author : {{ movie.author }} </small><br>
                            <small class="text-muted">Description : {{ movie.description }} </small>
                        </div>
                        <img src="{{ vich_uploader_asset(movie, 'pictureFile') }}" alt="" width="90" height="130" />
                    </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}

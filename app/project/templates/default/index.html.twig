{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <div class="container">
        <div class="py-5 text-center">
            <img class="d-block mx-auto mb-4" src="https://symfony.com/logos/symfony_black_03.png" alt="" width="72" height="72">
            <h2>Upload File</h2>
        </div>

        <div class="row">
            <div class="col-md-8">

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" placeholder="Name" value="" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="author">Author</label>
                        <input type="text" class="form-control" id="author" placeholder="Author" value="" required>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <label for="description">Description</label>
                        <textarea class="form-control" rows="5" cols="12" id="description"></textarea>
                    </div>
                </div>
                <hr>
                <button class="btn btn-primary btn-lg btn-block" type="submit">Save</button>
            </div>
            <div class="col-md-4">
                <h4 class="d-flex justify-content-between align-items-center mb-3">
                    <span class="text-muted">Movie</span>
                </h4>

                <ul class="list-group mb-3">
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Product name</h6>
                            <small class="text-muted">Brief description</small>
                        </div>
                        <img src="https://symfony.com/logos/symfony_black_03.png" alt="" width="30" height="30" />
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Second product</h6>
                            <small class="text-muted">Brief description</small>
                        </div>
                        <img src="https://symfony.com/logos/symfony_black_03.png" alt="" width="30" height="30" />
                    </li>
                    <li class="list-group-item d-flex justify-content-between lh-condensed">
                        <div>
                            <h6 class="my-0">Third item</h6>
                            <small class="text-muted">Brief description</small>
                        </div>
                        <img src="https://symfony.com/logos/symfony_black_03.png" alt="" width="30" height="30" />
                    </li>
                    <li class="list-group-item d-flex justify-content-between bg-light">
                        <div class="text-success">
                            <h6 class="my-0">Promo code</h6>
                            <small>EXAMPLECODE</small>
                        </div>
                        <span class="text-success">
                            <img src="https://symfony.com/logos/symfony_black_03.png" alt="" width="30" height="30" />
                        </span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
{% endblock %}
